<body>
  <h2>TABLA <span class="text-muted">REGISTRO DE USUARIOS</span> </h2>
  <a href="/users" class="btn btn-outline-secondary">Regresar</a>
  <div class="table-responsive">
      <table id="example"  class=" table table-striped table-ligth table-hover table-sm ">
        <thead class="text-center">
        <tr>
          <th>Nombre de CDS o TELECENTRO</th>
          <th>Cedula</th>
          <th>Correo</th>
          <th>Tel√©fono</th>
          <th>Rol</th>
          <th>Acciones</th>
        </tr>
        </thead>

        <tbody>
          <% for(let i = 0; i < data.length;i ++ ) {%> 
            <tr>
              <td><%= data[i].concatenar%></td>
              <td><%= data[i].cedula%></td>
              <td><%= data[i].correo%></td>
              <td><%= data[i].telefono%> </td>
              <td><%= data[i].rol%> </td>

              <td>
                <button type="button" data-bs-toggle="modal" data-bs-target="#modalEliminar<%=data[i].id_usuarios%>" class="btn btn-outline-danger m-1" title="Eliminar Usuario" >‚ùå</button>
  
                <div class="modal fade" id="modalEliminar<%=data[i].id_usuarios%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Eliminar Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <h3>Confirmar Eliminaci√≥n:</h3>
                        <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">C√≥digo</label>
                        <input readonly value="<%= data[i].codigo%> ">
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <a  href="/delete.data/<%=data[i].id_usuarios%>" class="btn btn-primary">Aceptar</a>
                      </div>
                    </div>
                  </div>
                </div>
                <button type="button" title="Editar" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal<%=data[i].id_usuarios%>" data-bs-whatever="@fat">üñã</button></td>
              </tr>
              
            <div class="modal fade" id="exampleModal<%=data[i].id_usuarios%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">MODIFICA EL CAMPO REQUERIDO</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form method ="post" action="/edit.users/<%= data[i].id_usuarios%>">

                       <!-- pendiente -->
                      <div class="mb-3">
                        <label for="message-text" class="col-form-label">	CDS o Telecentro</label>
                        <select  name="nombre_cds_telecentro" id="tipo"  class="select-css">
                          <option value ="<%= data[i].id_usuarios%>" selected disabled><%= data[i].concatenar%></option>
                          <% for(let i = 0; i < data.length; i++) { %> 
                            <option value ="<%= data[i].concatenar %>" ><%= data[i].concatenar %> </option>
                            <%  } %> 
                          </select>
                        </div>
                        <!-- pendiente -->
                        
                        <div class="mb-3">
                          <label for="recipient-name" class="col-form-label">C√≥digo</label>
                          <input type="text" name="codigo" pattern="[0-9]{4}" title="la contrasena debe ser numerica y debe contener 4 digitos"  value="<%= data[i].codigo%>">
                        </div>
                        
                        <div class="mb-3">
                          <label for="recipient-name" class="col-form-label">Correo</label>
                          <input type="text" name="correo" value="<%= data[i].correo%>">
                        </div>
                        <div class="mb-3">
                          <label for="recipient-name" class="col-form-label">t√©lefono</label>
                          <input type="number" name="telefono" value="<%= data[i].telefono%>">
                        </div>
                        <div class="mb-3">
                          <label for="recipient-name" class="col-form-label">Rol</label>
                          
                          <select name ="rol" id="rol" class="select-css"  value="<%= data[i].rol%>">>
                            <option value="Coordinador CDS" selected>Coordinador CDS</option>
                            <option value ="Apoyo Telecentro" selected>Apoyo Telecentro</option>
                          </select> 
                        </div>

                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Cancelar</button>
                    <input type="submit" class="btn btn-primary" value ="Aceptar">
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
            <% } %>
        </tbody>
    </table> 
    </div>
    <script>
      $(document).ready(function() {
         table = $('#example').DataTable({
        
        });
    
        //Creamos una fila en el head de la tabla y lo clonamos para cada columna
        $('#example thead tr').clone(true).appendTo( '#example thead' );
    
        $('#example thead tr:eq(1) th').each( function (i) {
            var title = $(this).text(); //es el nombre de la columna
            $(this).html( '<input type="text" placeholder="Search...'+title+'" />' );
     
            $( 'input', this ).on( 'keyup change', function () {
                if ( table.column(i).search() !== this.value ) {
                    table
                        .column(i)
                        .search( this.value )
                        .draw();
                }
            } );
       
        } );  
    
        table.destroy();
    
    $(document).ready(function() {
    $('#example').DataTable({
      orderCellsTop: true,
          destroy: true,
           fixedHeader: true,
            "language": {
              "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json",
              },
                "dom": 'Bfrtlip',
                  "buttons":{
                    "dom":{
                     "button":{
                       "className": 'btn'
                              }
                            },
                  "buttons":[{
                     "extend":"excel",
                       "text": '<i class="fas fa-file-excel"></i>',
                         "className": 'btn btn-outline-success mb-1',
                              "titleAttr": 'Exportar a Excel',
                              "excelStyles":{
                                "template": 'green_medium'
                              }
                            }]
                          }                                              
          })          
        });
      }); 
      </script>
